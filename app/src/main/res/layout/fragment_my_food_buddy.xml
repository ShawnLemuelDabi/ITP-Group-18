<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55AFC9"
        tools:context=".ui.fragment.MyFoodBuddyFragment"
        android:padding="20dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="84dp"
            android:backgroundTint="#47D944"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/btnGo"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvHeaderFB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/tvHeaderFB1"
            android:textColor="#FFE03C"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvSubHeaderFB1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMascots" />

        <TextView
            android:id="@+id/tvSubHeaderFB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/tvSubHeaderFB1"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/btnGo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivMascots"
            android:layout_width="204dp"
            android:layout_height="301dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mascots"
            android:contentDescription="@string/ivMascots" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>